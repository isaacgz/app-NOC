# ============================================================
# NOC System - Environment Variables
# ============================================================

# ============================================================
# Server Configuration
# ============================================================
PORT=3000
NODE_ENV=development

# ============================================================
# Email Configuration (SMTP)
# ============================================================
MAILER_SERVICE=gmail
MAILER_EMAIL=your-email@gmail.com
MAILER_SECRET_KEY=your-app-password

# Email destinatarios por defecto para alertas
DEFAULT_ALERT_EMAILS=admin@example.com,ops@example.com

# ============================================================
# PostgreSQL Configuration (FASE 7 - Prisma)
# ============================================================

# Habilitar o deshabilitar PostgreSQL
# Si está deshabilitado, el sistema usará solo archivos JSON
DB_ENABLED=true

# Prisma Database URL (formato completo)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/noc_monitoring?schema=public"

# Variables individuales (para Docker Compose)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=noc_monitoring
DB_USERNAME=postgres
DB_PASSWORD=postgres

# Logging de queries (solo desarrollo)
DB_LOGGING=false

# ============================================================
# InfluxDB Configuration (FASE 6)
# ============================================================

# Habilitar o deshabilitar InfluxDB
# Si está deshabilitado, el sistema usará solo logs en filesystem
INFLUXDB_ENABLED=false

# URL del servidor InfluxDB
INFLUXDB_URL=http://localhost:8086

# Token de autenticación
# Para generar: influx auth create --org <org> --all-access
INFLUXDB_TOKEN=your-influxdb-token-here

# Organización en InfluxDB
INFLUXDB_ORG=noc-monitoring

# Bucket (base de datos) para métricas
INFLUXDB_BUCKET=service-metrics

# ============================================================
# Monitoring Configuration
# ============================================================

# Intervalo de cálculo de SLOs (minutos)
SLO_CALCULATION_INTERVAL=5

# Retención de datos en filesystem (días)
LOG_RETENTION_DAYS=30

# ============================================================
# Alertas Configuration
# ============================================================

# Cooldown por defecto entre alertas (minutos)
DEFAULT_ALERT_COOLDOWN=30

# Número de reintentos antes de alertar
DEFAULT_ALERT_RETRIES=3

# ============================================================
# Dashboard Configuration
# ============================================================

# Puerto del dashboard web
DASHBOARD_PORT=3000

# Habilitar CORS para desarrollo
CORS_ENABLED=true

# Dominios permitidos para CORS (separados por coma)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
